<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="plugin.video.catchuptv.au.plus7"
  name="Plus7"
  version="0.4-rc2"
  provider-name="Andy Botting">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             provides="video"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension 
    point="xbmc.addon.metadata"
    library="default.py">
    <summary>Plus7 script by Andy Botting</summary>
    <description>PLUS7 offers video streaming of full length episodes as seen on Seven, 7TWO and other content partners - just hit the play button and you can watch high quality, full screen videos straightaway without having to wait for downloads.</description>
    <provides>video</provides>
    <platform>all</platform>
  </extension>
</addon>
